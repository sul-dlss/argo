<tr class="version<%= version %>">
 <td colspan="3">-
   <%= title %><% if user_version %> (<%= link_to "Public version #{user_version}", user_version_path %>)<% end %>
 </td>
</tr>

<% steps.each do |k, m| %>
<tr class="version<%= version %>">
  <td></td>
  <td><%= m[:display] || k.titleize %></td>
  <td><%= m[:time].nil? ? 'pending' : m[:time].in_time_zone.to_s %></td>
</tr>
<% end %>
