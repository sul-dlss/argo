<header class="documentHeader row">
  <%= render OpenCloseComponent.new(solr_document: @document) if helpers.can?(:manage_item, @cocina) %>

  <%= content_tag @as, class: @classes do %>
    <%= title -%>
  <% end %>

  <div class="object-type object-type-<%= object_type %> fw-bold text-center text-uppercase rounded-pill fs-4 float-end">
    <%= object_type %>
  </div>
</header>
