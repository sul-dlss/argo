<table class="table table-sm mb-5 caption-header">
    <caption>Details</caption>
    <tbody>
      <tr>
        <th class="col-3" scope="row">Object type</th>
        <td>
            <%= object_type %>
        </td>
      </tr>

      <tr>
        <th class="col-3" scope="row">Project</th>
        <td>
          <%= render Show::ProjectTagComponent.new(document: @presenter.document) %>
        </td>
      </tr>

      <tr>
        <th class="col-3" scope="row">Created</th>
        <td>
            <%= l created_date, format: :long if created_date %>
        </td>
      </tr>

      <tr>
        <th class="col-3" scope="row">Released to</th>
        <td>
            <%= released_to %>
        </td>
      </tr>

      <tr>
        <th class="col-3" scope="row"># of items</th>
        <td>
            <turbo-frame id="collection-member-count" src="<%= count_collection_path(id) %>"></turbo-frame>
        </td>
      </tr>

      <tr>
        <th class="col-3" scope="row"><%= catalog_record_id_label %></th>
        <td>
          <%= render Show::CatalogRecordIdComponent.new(presenter: @presenter) %>
        </td>
      </tr>

      <tr>
        <th class="col-3" scope="row">Tags</th>
        <td>
          <%= render Show::TagsComponent.new(document: @presenter.document, presenter: @presenter) %>
        </td>
      </tr>
    </tbody>
  </table>
