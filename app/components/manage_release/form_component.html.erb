<%= form_with(url: item_manage_release_path(@document.id), method: :patch) do |f| %>
  <div class='mb-3'>
    <label>Manage release to discovery applications for <%= @document.object_type %> <%= @document.id %></label>
  </div>
  <h2><%= @document.title_display %></h2>
  <div class='mb-3'>
    <label>Released for:</label> <%= @document.released_to.to_sentence %>
  </div>
  <%= child_form(f) %>
  <div class='mb-3'>
    <button type='submit' class='btn btn-primary'>Submit</button>
  </div>
<% end %>
