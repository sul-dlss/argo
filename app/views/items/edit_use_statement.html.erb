<%= turbo_frame_tag 'edit_use_statement' do %>
  <%= form_with model: @change_set do |f| %>
    <div class="mb-3">
      <%= f.label :use_statement, class: 'visually-hidden' %>
      <%= f.text_field :use_statement, class: 'form-control' %>
    </div>
    <div class="float-end">
      <%= link_to 'Cancel', solr_document_path(params[:id]), target: '_top' %>
      <%= f.submit 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
