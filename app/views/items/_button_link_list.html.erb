<div class='btn-group-vertical argo-show-btn-group' role='group' aria-label='Argo action buttons'>
  <%buttons.each do |button|%>
    <%
      button_data = {}
      if button[:confirm]
        # :confirm trumps :ajax_modal, because :ajax_modal would negate :confirm by firing the ajax request regardless of the user's decision
        button_data[:confirm] = button[:confirm]
      elsif !button[:new_page]
        button_data[:ajax_modal] = 'trigger'
      end
    %>
    <%= link_to button[:label], button[:url], class: 'btn button btn-primary', data: button_data %>
  <%end%>
</div>
