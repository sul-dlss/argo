<table class="detail" id="workflow-details">
  <thead>
  <tr><th>name</th><th>status</th></tr>
  </thead>
  <tbody>
  <% if workflows.length > 0 %>
    <% workflows.each do |wf| %>
      <tr>
        <td><%= link_to wf.workflow_name, item_workflow_path(document_id, wf.workflow_name), title: wf.workflow_name, data: { blacklight_modal: 'trigger' } %></td>
        <td id="workflow-details-status-<%= wf.workflow_name %>">
          <%= wf.complete? ? 'completed' : 'active' %>
          <% if wf.error_count.positive? %>
            <span class="errortext">(<%= pluralize(wf.error_count, 'error') %>)</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr><td colspan="3">No workflows</td></tr>
  <% end %>
  </tbody>
</table>
