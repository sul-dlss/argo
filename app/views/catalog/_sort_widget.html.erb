<%# Override from blacklight to change the button class to btn-outline-primary %>
<% if show_sort_and_per_page? %>
  <%= render Blacklight::System::DropdownComponent.new(
        param: 'sort',
        choices: active_sort_fields.map { |key, config| [sort_field_label(config.key), key] },
        id: 'sort-dropdown',
        search_state:,
        selected: current_sort_field&.key
      ) do |w| %>
      <%= w.with_button classes: 'btn btn-outline-primary dropdown-toggle', label: w.button_label %>
  <% end %>
<% end %>
