<p id="notice"><%= notice %></p>

<h1>Listing Bulk Actions</h1>

<table>
  <thead>
    <tr>
      <th>Action type</th>
      <th>Status</th>
      <th>Log name</th>
      <th>Description</th>
      <th>Druid count total</th>
      <th>Druid count success</th>
      <th>Druid count fail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bulk_actions.each do |bulk_action| %>
      <tr>
        <td><%= bulk_action.action_type %></td>
        <td><%= bulk_action.status %></td>
        <td><%= bulk_action.log_name %></td>
        <td><%= bulk_action.description %></td>
        <td><%= bulk_action.druid_count_total %></td>
        <td><%= bulk_action.druid_count_success %></td>
        <td><%= bulk_action.druid_count_fail %></td>
        <td><%= link_to 'Show', bulk_action %></td>
        <td><%= link_to 'Edit', edit_bulk_action_path(bulk_action) %></td>
        <td><%= link_to 'Destroy', bulk_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

