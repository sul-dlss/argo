<%= form_with url: collection_job_path, class: 'new_bulk_action', data: { turbo_frame: '_top' } do |f| %>
  <%= render 'bulk_actions/errors' %>

  <span class='help-block'>
    Set collection(s)
  </span>
  <div class='mb-3'>
    <%= f.label :new_collection_ids, 'Collections:' %>
    <%= f.select(:new_collection_ids, options_for_select(current_user.permitted_collections(with_none: false)), {}, multiple: true, data: { controller: 'multiselect' }) %>
  </div>
  <p>Leave collections blank to remove all collections.</p>
  <%= render 'bulk_actions/druids', f: %>
  <%= render 'bulk_actions/common_fields', f: %>
<% end %>
